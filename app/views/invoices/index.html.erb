<div class="home container mt-4">

  <h1>Invoices</h1>

  <p style="color: green"><%= notice %></p>

  <div class="card">
    <div class="card-body">
      <div class="d-flex align-items-center justify-content-between">
        <h1></h1>

        <%= link_to "New invoice", new_invoice_path, class: 'btn btn-outline-success' %>
      </div>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Date</th>
            <th scope="col">Total</th>
            <th scope="col">Company</th>
          </tr>
        </thead>
        <tbody>
          <% @invoices.each do |invoice| %>
            <tr>
              <th scope="row"><%= invoice.number %></th>
              <td><%= invoice.date %></td>
              <td><%= invoice.total_amount_due %></td>
              <td><%= invoice.customer_name %></td>
              <td>
                <%= link_to 'show', invoice, type: 'button', class: 'btn btn-outline-info' %>
              </td>
            <tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
